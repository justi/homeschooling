%h2 Sign in
= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  .row-fluid#general
    .span3
    .span6.well
      .span5
        = f.label :email
        %br
        = f.email_field :email
      .span5
        = f.label :password
        %br
        = f.password_field :password
      .clear
        - if devise_mapping.rememberable?
          .span8
            .pull-left
              = f.check_box :remember_me
              = f.label :remember_me
              = f.submit "Sign in"
            .pull-right
              %br
              = render :partial => "devise/shared/links"